{
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "eslint-plugin-react"
  ],
  "rules": {
    "semi": "error",
    "no-console": "warn",
    "react/state-in-constructor": [
      0
    ]
  }
}